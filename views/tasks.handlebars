<div class="container justify-content-center">
  <h1 class="text-center mt-3"><u>Tasks</u></h1>
  {{#if projects}}
  <br />
  <br />
  <h2 class="text-center">You currently have no tasks
    <a href="/projects">Click here to start</a>
  </h2>
  {{else}}
  <div class="table-responsive">
    <table class="table table-striped mt-4">
      <thead>
        <tr>
          <th colspan="4" scope="col"><a class="btn btn-primary" href="/tasks">Create New Task</a>
            <br />
            <br />
          </th>

        </tr>
        <tr>
          <th scope="col">Project Name</th>
          <th scope="col">Short Description</th>
          <th scope="col">Created At</th>
        </tr>

      </thead>
      {{#each projects as |project|}}
      <tbody>
        <tr>
          <td><a href="/projects/{{project.id}}" class="">{{project.projectName}}</a></td>
          <td>{{{project_tease project.projectDesc}}}</td>
          <td>{{format_date project.createdAt}}</td>
        </tr>
      </tbody>
      {{/each}}
    </table>

  </div>
  {{/if}}
</div>