<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="post-title">Project</label>
    <input type="text" name="post-title" value="{{post.title}}" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input">{{post.body}}</textarea>

    <label class="form-label" for="post-boss">Boss</label>
    <input type="text" name="post-boss" value="{{post.boss}}" class="form-input" />

    <label class="form-label" for="post-rate">Rate Of Pay</label>
    <input type="text" name="post-rate" value="{{post.rate}}" class="form-input" />

