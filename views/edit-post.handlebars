          <div class="form-group">
        <label class="form-label" for="editor">Project Description</label>
        <textarea id="editor" name="post-body" class="form-control">{{post.body}}</textarea>
      </div>

      
        <div>
          <label class="col-sm-2 col-form-label" for="post-boss">Add Employee to Project</label>
          <input type="text" name="post-boss" value="{{post.boss}}" class="form-input"placeholder="Coming Soon"></input>
        </div>

        <div>
          <label class="col-sm-2 col-form-label" for="post-rate">Budget</label>
          <input type="text" name="post-rate" value="{{post.rate}}" class="form-input" placeholder="Coming Soon"></input>
        </div>

        <div>
          <label class="col-sm-2 col-form-label" for="post-date">Due Date</label>
          <input type="date" id="date" value="{{post.date}}" class="form-input"></input>
        </div>


      </div>
<div class="row my-3">
    <button type="submit"  id="update-btn" class="col-2 mx-2 btn btn-primary">Update</button>
    <button type="button" id="delete-btn" class="mx-3 col-2 btn btn-danger">Delete</button>
    </div>
</div>

<script src="/js/edit.js"></script>
