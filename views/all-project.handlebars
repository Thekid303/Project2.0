<div class="container">
  <a id="loginBtn" class="nav-link" href="/api/tasks"><button class="w-100 btn btn-lg btn-primary" id="tasksBtn">GET TASKS</button></a>

  <div class="row d-flex justify-content-center">
    {{#each projects}}

      <article class="card col-9 col-md-5 p-3 m-4"><a
          class="proj-header"
          href="/api/projects/{{id}}">
          <div class="card-header d-flex justify-content-center bg-warning">
            <h2>
              {{name}}
            </h2>
          </div>
          <div class="card-body my-3">
            {{description}}
          </div>
        </a>
        <div class="col">
        

        <a id="edit" class="nav-link" href="/api/projects/edit"><button class="w-100 btn btn-sm btn-info" id="edit">EDIT</button></a>
        <a id="deleteBtn" class="nav-link" href="/api/projects"><button class="w-100 btn btn-sm btn-danger" id="deleteBtn">DELETE</button></a>

       
        </div>
      </article>

    {{/each}}
  </div>
</div>