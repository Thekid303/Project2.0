<div class="container">
  <div class="row d-flex justify-content-center">
    {{#each projects}}
    <article class="card col-9 col-md-5 col-lg-4 p-3 m-4">
      <div class="card-header d-flex justify-content-center bg-warning">
        <h2>
          <a href="/project/{{id}}">{{name}}</a>
        </h2>
      </div>
      <div class="card-body">
        {{description}}
      </div>
    </article>
    {{/each}}
  </div>
</div>