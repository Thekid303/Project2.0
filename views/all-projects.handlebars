<div class="posts">
  {{#each projects}}
  <article class="card">
    <div class="card-header d-flex justify-content-center">
      <h2>
        <a href="/project/{{id}}">{{name}}</a>
      </h2>
    </div>
    <div class="card-body">
      {{!-- project info --}}
      {{description}}
      {{budget ? }}
      {{employees ? }}
      {{hours-spent ? }}
    </div>
  </article>
  {{/each}}
</div>