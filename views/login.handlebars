<div class="d-flex justify-content-center">
  <div class="login-card">
    <h2 class="page-title display-3 d-flex justify-content-center">Login</h2>
    <form class="form login-form">
      <div class="form-group py-2 d-flex justify-content-center">
        <label for="user-login">Username:</label>
        <input class="form-input ps-3" type="text" id="email-login" />
      </div>
      <div class="form-group py-2 d-flex justify-content-center">
        <label for="password-login">Password:</label>
        <input class="form-input ps-3" type="password" id="password-login" />
      </div>
      <div class="form-group pt-2 d-flex justify-content-center">
        <button class="btn btn-dark" type="submit">Login</button>
      </div>
    </form>
  </div>